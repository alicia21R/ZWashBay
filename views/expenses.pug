extends layoutdash

block content
    div
        .bd-example
            .d-flex.justify-content-between.flex-wrap.flex-md-nowrap.align-items-center.pt-3.pb-2.mb-3.border-bottom
                h2 Daily Expenses
                   i.fa.fa-car
                if alert == "success"
                    div.alert.alert-success Expenses added successfully
                if alert == "error"
                    div.alert.alert-danger An error occurred, failed to add washer 
            form(action='/register/expenses' method='POST')
                .input-group
                    input#date.form-control.mainer(type='text' onclick="(this.type='date')" name='do' placeholder='Date' required='')
                .input-group
                     select#washPackage.form-control.mainer(type='text' name='item' )
                        option(value='expense' selected='') Daily Expense
                         option(value="polish")  polish
                        option(value="detergent") Powdered detergents
                        option(value="electricity units") Electricity units
                .input-group
                    input#carType.form-control.mainer(type="number" name="amount" placeholder='Amount' required='')
                hr
                .btn-block
                button(type='submit' href='/tracker') Submit
